<!-- example.launch.xml -->

<launch>

  <!-- args that can be set from the command line or a default will be used -->
  <arg name="image_topic" default="/tir/image"/>
  <arg name="image_path" default="/home/user/workspace/src/yolo_tir_rust/src/yolo_tir/param/uav_view.jpg"/>
  <arg name="detection_topic" default="/tir/detection"/>

  <!-- network parameter -->
  <arg name="nms_threshold" default="0.45"/>
  <arg name="conf_threshold" default="0.25"/>
  <arg name="conf_idx" default="4"/>
  <arg name="cls_idx_offset" default="5"/>


  <!-- start a turtlesim_node in the turtlesim1 namespace -->
  <node pkg="yolo_tir" exec="detection_pub" name="inference_node" namespace="yolo_tir"  output="screen"/>
  <node pkg="yolo_tir" exec="fake_img_pub" name="image_node" namespace="yolo_tir"  output="screen"/>

</launch>